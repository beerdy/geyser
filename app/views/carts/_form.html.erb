<%= form_with(model: cart, local: true) do |form| %>
  <% if cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
      <% cart.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :session %>
    <%= form.text_field :session, id: :cart_session %>
  </div>

  <div class="field">
    <%= form.label :product %>
    <%= form.text_field :product, id: :cart_product %>
  </div>

  <div class="field">
    <%= form.label :quantify %>
    <%= form.number_field :quantify, id: :cart_quantify %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :cart_active %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
