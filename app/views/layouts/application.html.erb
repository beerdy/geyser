    scrollHorizontal: false // Set to true if your website scrolls horizontal instead of vertical.
  });

$(".img img").on("click", function(e) {
    var href = $(this).attr('src');
    mrgallery.open(href);
    
    return false;
});

}); 

function bigMenu(it){
